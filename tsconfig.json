{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "js",
    "declaration": true,
    "noImplicitAny": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "ts/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*ts"
  ]
}
